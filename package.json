{
  "name": "recipeasy",
  "version": "1.0.0",
  "description": "recipeasy - the simplest way to manage your recipe book",
  "main": "index.js",
  "scripts": {
    "build": "npx run-s copy compile-scss",
    "compile-scss": "node-sass src/scss/app.scss public/assets/css/app.css --output-style compressed",
    "copy": "npx run-p copy-root copy-assets",
    "copy-assets": "npx copy-and-watch --clean src/{img,js}/** public/assets",
    "copy-root": "npx copy-and-watch --clean src/{*,.*} public",
    "watch": "npx run-p copy-watch watch-scss",
    "watch-scss": "node-sass src/scss/app.scss public/assets/css/app.css -w -r --source-map true",
    "copy-watch": "npx run-p copy-root-watch copy-assets-watch",
    "copy-assets-watch": "npx copy-and-watch --watch src/{img,js}/** public/assets",
    "copy-root-watch": "npx copy-and-watch --watch src/{*,.*} public"
  },
  "author": "BenRutlandWeb",
  "license": "ISC",
  "devDependencies": {
    "copy-and-watch": "^0.1.4",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5"
  }
}
