{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recipe",
  "type": "object",
  "required": [
    "title",
    "description",
    "serves",
    "prepTime",
    "cookTime",
    "image",
    "keywords",
    "ingredients",
    "methods"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "title": {
      "type": "string",
      "description": "The title of the recipe"
    },
    "description": {
      "type": "string",
      "description": "A short description of the recipe"
    },
    "image": {
      "type": "string",
      "description": "An image path"
    },
    "serves": {
      "type": "integer",
      "description": "The number of servings"
    },
    "prepTime": {
      "type": "string",
      "pattern": "^\\d{2}:\\d{2}$",
      "description": "Preparation time in HH:MM format (e.g. '01:30' for 1 hour 30 minutes)"
    },
    "cookTime": {
      "type": "string",
      "pattern": "^\\d{2}:\\d{2}$",
      "description": "Cooking time in HH:MM format (e.g. '00:45' for 45 minutes)"
    },
    "keywords": {
      "type": "array",
      "description": "List of tags for categorizing the recipe",
      "items": {
        "type": "string"
      }
    },
    "ingredients": {
      "type": "array",
      "description": "A bullet list of ingredients",
      "items": {
        "$ref": "ingredient.json"
      }
    },
    "methods": {
      "type": "array",
      "description": "Step-by-step instructions",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
